<Window x:Class="weather_widget_application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weather_widget_application"
        mc:Ignorable="d"
        Title="Weather Widget" Height="300" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <!-- Main container with gradient background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#87CEEB" Offset="0"/>
                <GradientStop Color="#4682B4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Define rows for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Location row -->
            <RowDefinition Height="120"/>
            <!-- Weather icon and temperature -->
            <RowDefinition Height="80"/>
            <!-- Weather conditions -->
            <RowDefinition Height="*"/>
            <!-- Additional info -->
        </Grid.RowDefinitions>

        <!-- Location Section -->
        <StackPanel Grid.Row="0" Orientation="Vertical" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="LocationText" Text="Copenhagen, Denmark" 
                      FontSize="18" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Name="DateTimeText" Text="Tuesday, August 26, 2025" 
                      FontSize="12" Foreground="LightGray" 
                      HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Weather Icon and Temperature Section -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Weather Icon -->
            <Image Name="WeatherIcon" Grid.Column="0" 
                  Source="/Icons/sunny.png" 
                  Width="80" Height="80" 
                  HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Temperature -->
            <StackPanel Grid.Column="1" 
                       HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Name="TemperatureText" Text="22°C" 
                          FontSize="48" FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Name="FeelsLikeText" Text="Feels like 25°C" 
                          FontSize="12" Foreground="LightGray" 
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Weather Conditions Section -->
        <StackPanel Grid.Row="2" Orientation="Vertical" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="ConditionText" Text="Partly Cloudy" 
                      FontSize="20" FontWeight="SemiBold" 
                      Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Name="DescriptionText" Text="A pleasant day with some clouds" 
                      FontSize="12" Foreground="LightGray" 
                      HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Additional Weather Info -->
        <Grid Grid.Row="3" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Humidity -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="💧" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock Name="HumidityText" Text="65%" 
                          FontSize="14" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Humidity" FontSize="10" 
                          Foreground="LightGray" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Wind Speed -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Text="💨" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock Name="WindSpeedText" Text="12 km/h" 
                          FontSize="14" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Wind" FontSize="10" 
                          Foreground="LightGray" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Pressure -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="📊" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock Name="PressureText" Text="1013 hPa" 
                          FontSize="14" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Pressure" FontSize="10" 
                          Foreground="LightGray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
